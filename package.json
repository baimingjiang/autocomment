{
	"name": "autoheadcomment",
	"displayName": "AutoHeadComment",
	"description": "文件头插入版本描述信息",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.30.0"
	}, 
	"publisher": "baimingjiang",
	"icon": "images/icon.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.insertautoheadcomment",
				"title": "InsertAutoHeadComment"
			}
		],
		"keybindings":[
			{
				"command": "extension.insertautoheadcomment",
				"key": "CTRL+I",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.insertmodifycomment",
				"key": "CTRL+M",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "AutoComment Configuration",
			"properties": {
				"autocomment.autor": {
					"type": "string",
					"default": "autocomment",
					"description": "文件创建者"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"bugs": {
        "url": "https://github.com/baimingjiang/autocomment/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/baimingjiang/autocomment"
    }
}
